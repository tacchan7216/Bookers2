<div class="container">
    <h1>User info</h1>
    <%= form_with model: @user do |f| %>
    <div class="row">
        <div class="col-sm-12 colmd-8 col-lg-6">
              <p>Name</p>
              <%= f.text_field :name %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 colmd-8 col-lg-6">
            <p>Image</p>
            <%= f.file_field :profile_image,  accept: "image/*" %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 colmd-8 col-lg-6">
            <p>Introduction</p>
            <%= text_area :body %>
        </div>
    </div>
    <div class="row">
        <%= f.submit "Update User" %>
    </div>
    <% end %>
</div>
