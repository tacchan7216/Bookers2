<div class="container">
  <div class="row">
    <%= render pertial: 'list', locals: { user: @user, book: @book} 
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
          <table class="mybooks">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <%  @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path do %>
                    <%= image_tag book.user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
      </div>
  </div>
</div>