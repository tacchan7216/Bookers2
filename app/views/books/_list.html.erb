        <div class="col-md-3">
          <h1>User info</h1>
            <p><%= image_tag user.get_profile_image(100,100) %></p>
            <table class="User_info">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= user.introduction %></th>
                </tr>
              </tbody>
            </table>
          <div class="row">
            <%= link_to edit_user_path(user.id), class: "btn btn-outline-dark btn-block" do %>
              <i class="fa-solid fa-user-gear"></i>
            <% end %>
          </div>
          <h1>New book</h1>
            <%= form_with model: book, url: '/books', method: :post do |f| %>
              <h4>Title</h4>
                <%= f.text_field :title %>
              <h4>Opinion</h4>
                <%= f.text_area :body %>
                <%= f.submit 'Create Book' %>
            <% end %>
        </div>